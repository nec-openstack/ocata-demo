ALERT ContainerOverLoadAlert
  IF sum(container_tasks_state{state='running', image!=''}+1) / sum(up{job="node"})
  FOR 3m
  LABELS {}
  ANNOTATIONS {
    summary = "Over loaded for a container",
    description = "High Memory usage on {{$labels.instance}} for container {{$labels.name}} (current value: {{$value}})"
  }
